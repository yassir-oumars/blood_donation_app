<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bouton en état normal -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryButtonColor" /> <!-- Couleur d'arrière-plan du bouton -->
            <corners android:radius="8dp" /> <!-- Coins arrondis du bouton -->
        </shape>
    </item>

    <!-- Bouton en état pressé -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryButtonColor" /> <!-- Couleur d'arrière-plan du bouton lorsqu'il est pressé -->
            <corners android:radius="8dp" /> <!-- Coins arrondis du bouton -->
        </shape>
    </item>

    <!-- Bouton en état désactivé -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryButtonColor" /> <!-- Couleur d'arrière-plan du bouton lorsqu'il est désactivé -->
            <corners android:radius="8dp" /> <!-- Coins arrondis du bouton -->
        </shape>
    </item>

</selector>