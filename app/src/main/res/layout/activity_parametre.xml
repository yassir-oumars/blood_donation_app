<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profil"
    tools:context=".ParametreActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/profil_blood"
        app:civ_border_color="@color/purple_700"
        app:civ_border_width="2dp" />
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:layout_below="@+id/contre"
        android:text="Contactez-nous"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"/>



    <TextView
        android:id="@+id/nom_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom et Prénom"
        android:layout_below="@id/img2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:layout_marginEnd="65dp"
        android:textColor="@color/black"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/img_blood"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:src="@drawable/blood_icon"
        android:layout_below="@+id/nom_prenom"
        android:layout_marginTop="10dp"
        android:layout_marginStart="180dp"/>
    <TextView
        android:id="@+id/typeBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="183dp"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_blood"
        android:text="AB"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20dp" />






    <Button
        android:id="@+id/mesdonnée"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:text="Mes données"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"
        />
    <Button
        android:id="@+id/conseils"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:layout_below="@+id/mesdonnée"
        android:text="Conseils avant don"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"/>
    <Button
        android:id="@+id/contre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:layout_below="@+id/conseils"
        android:text="Contre-indications"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"/>
    <Button
        android:id="@+id/contacter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:layout_below="@+id/contre"
        android:text="Contactez-nous"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"/>

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_email"
        android:layout_below="@id/contacter"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23dp"
        />






</RelativeLayout>